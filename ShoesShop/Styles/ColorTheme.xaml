<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="GreenDarkMode" Color="Green"/>
            <SolidColorBrush x:Key="NavigatorBackground" Color="#FAFAFA"/>
            <SolidColorBrush x:Key="PageBackground" Color="#E7E7E3"/>
            <SolidColorBrush x:Key="CardBorderBrush" Color="#cbd5e1"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
            <SolidColorBrush x:Key="CardBackground" Color="#F8F8F8"/>
            <SolidColorBrush x:Key="AddButton" Color="#232321"/>
            <SolidColorBrush x:Key="TextAddButton" Color="White"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="GreenDarkMode" Color="DarkBlue"/>
            <SolidColorBrush x:Key="PageBackground" Color="Transparent"/>
            <SolidColorBrush x:Key="CardBorderBrush" Color="#4b5563"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#4b5563"/>
            <SolidColorBrush x:Key="CardBackground" Color="#232321"/>
            <SolidColorBrush x:Key="AddButton" Color="White"/>
            <SolidColorBrush x:Key="TextAddButton" Color="#232321"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>

